@model IEnumerable<WebUI.Entities.Producto>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("Inicio", "Index", "VistaGeneral")</li>
        <li>@Html.ActionLink("Gestion Productos", "Index", "Producto")</li>
        <li>Productos Destacados</li>
    </ol>
    <div class="col-md-10">
        <h2>Productos Destacados</h2>
        <br class="clearfix" />
        <br />
        <br />
        @if (Model.Count() > 0)
            {
            <table class="table table-hover table-bordered">
                <tr>
                    <th class="text-info" style="width:500px;">
                        Imagen
                    </th>
                    <th class="text-info">
                        Nombre
                    </th>
                    <th class="text-info">
                        Codigo
                    </th>
                    <th class="text-info">
                        Descripción
                    </th>
                    <th class="text-info">
                        Gestión
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.ImagenUri != "")
                            {
                                <img src="@Url.Content(item.ImagenUri)" alt="Image" class="img-responsive" />
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.ActionLink("Quitar", "QuitarDestacado", new { id = item.Id }, new { @class = "text-danger" })
                        </td>
                    </tr>
                }

            </table>
        } //del If Model.Count() > 0
        else
        {
            @Html.Partial("_GrillaVacia")
        }

    </div>
</div>
