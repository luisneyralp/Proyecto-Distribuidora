
@{
    ViewBag.Title = "Gracias";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@section styles{
    <style>
        .imagenyo {
            background-image: url("../../assets/img/backgrounds/1.jpg");
        }
    </style>
}
<!-- Top content -->

<div class="top-content imagenyo">
    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Distribuidora </strong> Hextech</h1>
